<h1>Sua nguoi dung</h1>
<% if (msg.length) { %>
    <div class="alert alert-success mt-3"><%= msg %> </div>
<% } %>
<form action="" method="post">
  <div class="mb-3">
    <label for="">Ten</label>
    <input
      type="text"
      name="name"
      value="<%= req.old?.name %>"
      placeholder="Ten..."
      class="form-control"
    />
    <%- req.errors?.name ? `<span class="text-danger">${req.errors?.name}</span
    >` : "" %>
  </div>
  <div class="mb-3">
    <label for="">Email</label>
    <input
      type="text"
      name="email"
      placeholder="email..."
      class="form-control"
      value="<%= req.old?.email %>"
    />
    <%- req.errors?.email ? `<span class="text-danger"
      >${req.errors?.email}</span
    >` : "" %>
  </div>
  <div class="mb-3">
    <label for="">Trang thai</label>
    <select name="status" class="form-select">
      <option value="0" <%= req.old?.status === "0" ? "selected" : "" %>>Chưa kích hoạt</option>
      <option value="1" <%= req.old?.status === "1" ? "selected" : "" %>>Kích hoạt</option>
    </select>
  </div>
  <button class="btn btn-primary">Lưu</button>
  <a href="#" class="btn btn-danger">Hủy </a>
</form>
